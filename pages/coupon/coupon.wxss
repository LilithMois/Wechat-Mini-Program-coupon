/* 店铺 */
.shop{
  padding: 24rpx 24rpx 0rpx 24rpx;
  height: 100%;
}
.shop-text{
  height: 40rpx;
}
.store{
  padding:20rpx 24rpx 5rpx 24rpx;
  height: 240rpx;
  float:clear;
}
.store .store-img{
  padding:20rpx 0rpx;
  width: 212rpx;
  height: 214rpx;
  float: left;
}
.store .store-img image{
  width: 212rpx;
  height: 214rpx;
}
.store .store-massage{
  float: left;
  height: 214rpx;
  padding: 20rpx 0rpx 10rpx 10rpx;
  display: flex;
  flex-direction: column;
}
.store .store-massage .banner-text{
  padding:0rpx 0rpx 10rpx 0rpx;
  font-size: 32rpx;
}
.store .store-massage .hot-text{
  width: 160rpx;
  font-size: 25rpx;
  text-align:center;
  background-color: #f05654;
  border-radius:100rpx;
}
.store .store-massage .address{
  padding:10rpx 0rpx;
  font-size: 25rpx;
  color:gery;
}
.store .store-massage .shop-img{
  padding: 8rpx 0rpx 0rpx 0rpx;
  height: 100rpx;
}
.store .store-massage .shop-img image{
  padding :0rpx 7rpx;
  width: 70rpx;
  height: 70rpx;
}