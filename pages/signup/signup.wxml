<!--pages/signup/signup.wxml-->
<!-- 公益活动报名跳转页面 -->

<!-- 顶部图片以及文字介绍 -->
<view class="sign-big">
  <view class="sign-img">
    <image src="{{signUp[0].imgUrl}}"></image>
  </view>
  <view class="sign-text"><text>{{signUp[0].text}}</text></view>
  <text class="energy"> 能量值:{{signUp[0].number}} </text>
</view>

<!-- 中部三层文字介绍 -->
<view class="sign-small">
  <view class="top">
    <text class="topic">我们一起公益</text><text class="time0">举办时间:{{signUp[1].time0}}</text>
    <text class="time1">报名时间:{{signUp[1].time1}}</text>
  </view>
  <view><text class="massage">{{signUp[1].text}}</text></view>
</view>
<!--中-->
<view class="sign-small">
  <view><text class="topic">承办单位:{{signUp[2].name}}</text></view>
   <view> <text class="massage">{{signUp[2].text}}</text></view>
</view>
<!--下-->
<view class="sign-small">
  <view><text class="topic">活动介绍:</text></view>
  <view> <text class="massage">{{signUp[3].text}}</text></view>
</view>
<button>点击报名</button>